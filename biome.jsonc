{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "include": ["./src/**/*", "./tools/**/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "useImportExtensions": "off",
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "useHookAtTopLevel": "off",
        "noUnusedVariables": "info",
        "noUnusedFunctionParameters": "info",
        "noUnusedPrivateClassMembers": "info"
      },
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "useNamingConvention": "off",
        "useFilenamingConvention": "off",
        "noNonNullAssertion": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": ["Component", "ParentComponent", "Bun"]
  }
}
